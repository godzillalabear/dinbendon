<h1><%= @item.name %></h1>

<ul>
  <li>Priceï¼š<%= @item.price %></li>
</ul>


<h3>Comment</h3>
<%= form_for(@comment, url:item_comments_path(@item)) do |form|%>

		<div class="form-group mb-3">
			<%= form.text_area :content, class: 'form-control'%>
		</div>
		<%= form.submit class: 'btn btn-success mb-3' %>

<%end %>


<ul>
	<% @item.comments.each do |comment| %>
		<div class="alert alert-dark" role="alert">
			<p> <%= comment.content %></p>
			<hr>
			<p> posted by <%= comment.user.email %> / <%= comment.created_at %></p>
		</div>
	<% end %>
		
</ul>