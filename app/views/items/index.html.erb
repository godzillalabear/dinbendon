


<h1>Your Orders</h1>

<%= link_to "Add new", new_item_path %>

	<div class="row">
		
		<% @items.each do |item| %>
			<div class="col-4 mb-3 item">
				<div class="card" >
				   		<%= image_tag item.cover.variant(resize_to_limit: [100, 100]), class: "cover-image" if item.cover.attached? %>
				  	<div class="card-body">
					  	<h5 >
					  		<%= link_to item.name, item_path(item.id), class: "card-title" %>
					  			
					  	</h5>
					  	<p class="card-text">
							<%= link_to "Edit", edit_item_path(item.id) , class: "btn btn-primary"%>

							<%= link_to "Delete", item_path(item.id), method: 'delete', data: {confirm: "Do you really want to delete?"}, class: "btn btn-success" %>   	
						</p>
				    </div>
				</div>  
			</div>
		<% end %>


	</div>


