<h1>Your Orders</h1>

<%= link_to "Add new", new_item_path %>

<ul>
  <% @items.each do |item| %>
    <li>
      <%= image_tag item.cover.variant(resize_to_limit: [100, 100]) if item.cover.attached? %>
      <%= link_to item.name, item_path(item.id) %>
      <%= link_to "Edit", edit_item_path(item.id) %>
      <%= link_to "Delete", item_path(item.id), method: 'delete', data: {confirm: "Do you really want to delete?"} %>
    </li>
  <% end %>
</ul>

